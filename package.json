{
  "name": "como",
  "version": "0.0.1",
  "description": "high-level framework based on soundworks dedicated at creating CoMo applications",
  "authors": [
    "Benjamin Matuszewski"
  ],
  "private": true,
  "license": "BSD-3-Clause",
  "scripts": {
    "clean": "rm -Rf client && rm -Rf server",
    "deploy": "np --yolo",
    "doc": "jsdoc -c jsdoc.json",
    "version": "npm run clean && npm run transpile && npm run doc && git add docs",
    "transpile:client": "babel src/client --out-dir client",
    "transpile:server": "babel src/server --out-dir server",
    "transpile:common": "babel src/common --out-dir common",
    "transpile": "npm run transpile:server && npm run transpile:client && npm run transpile:common",
    "watch:client": "chokidar src/client/ -c \"npm run transpile:client\"",
    "watch:server": "chokidar src/server/ -c \"npm run transpile:server\"",
    "watch:common": "chokidar src/common/ -c \"npm run transpile:common\"",
    "watch": "npm run clean && npm run transpile && concurrently \"npm run watch:client\" \"npm run watch:server\" \"npm run watch:common\""
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/collective-soundworks/soundworks-services"
  },
  "dependencies": {
    "@ircam/devicemotion": "^1.2.0",
    "@ircam/ticker": "^1.0.6",
    "@sindresorhus/slugify": "^0.9.1",
    "@soundworks/service-audio-buffer-loader": "0.0.1-alpha.0",
    "@soundworks/service-checkin": "0.0.1-alpha.0",
    "@soundworks/service-file-system": "0.0.1-alpha.0",
    "@soundworks/service-platform": "0.0.1-alpha.0",
    "fs-extra": "^8.1.0",
    "lodash.clonedeep": "^4.5.0",
    "rapid-mix-adapters": "github:ircam-rnd/rapid-mix-adapters#v1.2.2",
    "rimraf": "^3.0.0",
    "serve-static": "^1.14.1",
    "uuidv4": "^6.0.0",
    "waves-lfo": "^1.1.6",
    "xmm-node": "github:ircam-rnd/xmm-node#napi"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "chokidar": "^3.2.2",
    "chokidar-cli": "^2.0.0",
    "concurrently": "^5.0.0"
  }
}
